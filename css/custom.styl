$bg-color = #f9f9f9

*
  outline none !important

body
 background #f9f9f9
 background-image url('../pattern.png')

hr.invis
  border-color transparent

$title-color = #188AEA
.page-title
  color $title-color
  font-family 'Varela Round'
  font-size 80px
  text-shadow 0 2px 0 $bg-color, 0 4px 0 $title-color

.inline-block
  display inline-block

.chart-box
  padding 10px
  background white
  max-width 960px
  width 100%
  height 400px


.chart-carousel
  position relative
  margin-left auto
  margin-right auto
  overflow hidden
  height 400px
  width 100%
  max-width 1200px


.item
  transition-transform 500ms ease
  font-size 7px
  position absolute
  top 0%
  bottom 0%
  left 20%
  right 20%
  background rgba(#fff, .9)


.item:nth-child(1) {
  transform: scale(.5) translateX(-3000px);
}

.item:nth-child(2) {
  transform: scale(.5) translateX(-90%);
}

.item:nth-child(3) {
  z-index: 2;
}

.item:nth-child(4) {
  transform: scale(.5) translateX(90%);
}

.item:nth-child(5) {
  transform: scale(.5) translateX(3000px);
}

.tablebox
  padding 20px
  background white
  margin-right auto
  margin-left auto
  width 960px
  #js-table
    overflow auto

.fake-table-form
  border 1px solid #ccc
  border-radius 0px
  padding 2px 8px
  &:active, &:focus
    border 2px solid #5292F7


.table-settings
  text-align left

.y-axis-key-label
  z-index 1
  position relative
  background #ccc
  font-size $font-size-large
  font-weight 400
  padding 2.5px 5px
  margin-right 10px
  &:before
    z-index -1
    content ""
    background #ccc
    width 10px
    height 10px
    position absolute
    rotate(45deg)
    bottom 4px
    right -4px

.hot-table
  position relative
  margin-bottom 30px
  margin-top 20px

.x-axis-key-label
  position relative
  background #ccc
  font-size $font-size-large
  padding 2.5px 5px
  &:before
    content ""
    background #ccc
    width 10px
    height 10px
    position absolute
    rotate(45deg)
    bottom -4px
    left 5px

.control-menu
  display inline-block
  border-top 1px solid #ddd
  border-bottom 1px solid #ddd
  
.control-menu-item
  font-size $font-size-large
  display inline-block
  margin 10px 15px
  cursor pointer
  &:hover
    color black
    text-shadow 0px 1px 0px #bbb

.logo-box
  img 
    width 30px
    margin-right 10px